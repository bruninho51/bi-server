{
    "compilerOptions": {
      "declaration": true,
      "emitDecoratorMetadata": true,
      "experimentalDecorators": true,
      "module": "commonjs",
      "esModuleInterop": true,
      "target": "es6",
      "moduleResolution": "node",
      "sourceMap": true,
      "outDir": "dist",
      "lib": ["es2015"],
      "sourceRoot": "src",
      "rootDirs": ["src"],
      "baseUrl": "src",
      "paths": {
        "@/*": ["*"]
      }
    },
    "exclude": [
      "dist",
      "test",
      "node_modules"
    ]
  }